{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "artifacts": false,
    "contract": false,
    "assert": false
  },  
  "rules": {
    "no-extra-semi": "warn",
    "no-undef": "warn",
    "quotes": ["warn", "single"],
    "prefer-const": "warn",
    "space-before-blocks": ["warn", { "functions": "always" }]
  }
}
